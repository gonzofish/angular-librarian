{
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    },
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "mapRoot": "./",
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "files": [
        "./src/{{ name }}.module.ts",
        "./src/index.ts"
    ]
}
